@using Model.Material;

@{
    Layout = "~/Views/Shared/_Empty.cshtml";
}
<style>
    .error {
        color: red;
    }
</style>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-default bk-bg-white">
        <div class="panel-heading bk-bg-white">
            <h6><i class="fa fa-indent red"></i>Maintenance Material Infomation</h6>
            <div class="panel-actions">
                <a href="#" class="btn-minimize"><i class="fa fa-caret-up"></i></a>
                <a href="#" class="btn-closeiniframe"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <div class="panel-body">
            <div class="tabs" >
                <ul class="nav nav-tabs" id="tabs">
                    <li class="active">
                        <a href="#sapsearch" data-toggle="tab" onclick="resizeFrameAsyn()"><i class="fa fa-home"></i>Search</a>
                    </li>
                    <li>
                        <a id="tabEditMaterial" href="#sapedit" data-toggle="tab" onclick="resizeFrameAsyn()">Add/Update</a>
                    </li>
                    <li>
                        <a href="#sapimport" data-toggle="tab" onclick="resizeFrameAsyn()">Import</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="sapsearch" class="tab-pane active">
                        <div class="row">
                            <label class="col-md-1 control-label" for="text-input">Customer Part#</label>
                            <div class="col-md-3">
                                <input type="text" id="CustomerPart" name="text-input" class="form-control" placeholder="Text">
                                <span class="help-block">This is a help text</span>
                            </div>
                            <label class="col-md-1 control-label" for="text-input">Work Orde</label>
                            <div class="col-md-3">
                                <input type="text" id="WorkOrde" name="text-input" class="form-control" placeholder="Text">
                                <span class="help-block">This is a help text</span>
                            </div>
                            <label class="col-md-1 control-label" for="text-input">Product Name</label>
                            <div class="col-md-3">
                                <input type="text" id="ProductName" name="text-input" class="form-control" placeholder="Text">
                                <span class="help-block">This is a help text</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="bk-margin-5 btn btn-primary btn-sm" id="Search">Search</button>
                            </div>
                        </div>
                        <div id="searchResult"></div>
                    </div>
                    <div id="sapedit" class="tab-pane">
                      @Html.Partial("AddOrUpdate")
                    </div>
                    <div id="sapimport" class="tab-pane">
                        @Html.Partial("UpLoadFile")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/Material/Material.js"></script>